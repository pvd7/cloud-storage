<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ListView?>
<VBox fx:controller="com.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" stylesheets="styles.css">
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..." onAction="#sendMsgAction"/>
        <Button text="Click Me!!!" onAction="#sendMsgAction"/>
    </HBox>
</VBox>